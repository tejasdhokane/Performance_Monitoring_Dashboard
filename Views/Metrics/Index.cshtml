@model IEnumerable<Performance_Monitoring_Dashboard.Models.Metric>

<h2 class="my-4 text-center">Metrics Dashboard</h2>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Value</th>
            <th>Timestamp</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var metric in Model)
        {
            <tr>
                <td>@metric.Name</td>
                <td>@metric.Value</td>
                <td>@metric.Timestamp</td>
                <td>
                    <a class="btn btn-info btn-sm" href="@Url.Action("Edit", new { id = metric.Id })">Edit</a>
                    <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", new { id = metric.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-end">
    <a class="btn btn-success" href="@Url.Action("Create")">Add New Metric</a>
</div>
